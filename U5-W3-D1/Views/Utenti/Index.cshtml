@model IEnumerable<U5_W3_D1.Models.Utenti>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Utenti</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cognome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Psw)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isAdmin)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cap)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Citta)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cognome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Psw)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.isAdmin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cap)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Citta)
            </td>
            <td>
                @if (item.isAdmin == false)
                {
                    @Html.ActionLink("Rendi amministratore", "isAdmin", new { id = item.idUtente }, new { @class = "btn btn-success" })
                }
                else
                {
                    @Html.ActionLink("Retrocedi a utente", "isAdmin", new { id = item.idUtente }, new { @class = "btn btn-warning" })
                }
            </td>
        </tr>
    }

</table>