@model IEnumerable<U5_W3_D1.Models.Utenti>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center display-4 mb-5 fw-bold text-light" style="margin-top:100px";>Gestione Utenti</h2>

<div class="box-color p-2 my-5">
    <table class="w-100">
        <tr class="h-100">
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cognome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Psw)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isAdmin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Citta)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="h-100 m-2">
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cognome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Psw)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.isAdmin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Citta)
                </td>
                <td class="mx-3">
                    @if (item.isAdmin == false)
                    {
                        @Html.ActionLink("Rendi amministratore", "isAdmin", new { id = item.idUtente }, new { @class = "btn btn-success m-2" })
                    }
                    else
                    {
                        @Html.ActionLink("Retrocedi a utente", "isAdmin", new { id = item.idUtente }, new { @class = "btn btn-warning m-2" })
                    }
                </td>
            </tr>
        }

    </table>
</div>

